--display the database ordered by price. 
SELECT * FROM floral_shop 
ORDER BY price desc; 

--what is the avg price of items in the color red?
SELECT AVG(price) "avg color red price" 
FROM store 
where section='red';

--what are the most 5 expensive flowers? 
SELECT name, color, price
FROM floral_shop 
order by price asc 
limit 5;
